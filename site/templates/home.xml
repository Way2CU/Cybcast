<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
 	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<cms:svg file="site_sprite.svg"/>
			<!-- Header -->
			<header>
				<!-- Logo -->
				<a href="#" class="logo">
					<cms:svg file="site_sprite.svg" symbol="icon-logo"/>
				</a>

				<!-- Header article -->
				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					group="header_articles"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>

				<!-- Header contact form -->
				<div class="form_container">
					<h3><cms:text constant="fill_details" /></h3>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</header>

			<!-- Section features -->
			<section class="features">
				<!-- Main article -->
				<cms:module
					name="articles"
					action="show"
					text_id="main_features_article"
					group="main_features_article"
					template="stock/article_generic.xml"
					/>

				<div class="article_list">
					<!-- List of articles with link, image and sprite by text_id -->
					<cms:module
						name="articles"
						action="show_list"
						group="features_articles"
						template="stock/features_generic.xml"
						>
						<param name="sprite" value="site_sprite.svg"/>
					</cms:module>
				</div>
			</section>
		</body>
	</html>
</document>
